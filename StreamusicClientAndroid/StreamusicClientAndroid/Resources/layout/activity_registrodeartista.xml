<?xml version="1.0" encoding="utf-8" ?> 


<LinearLayout android:orientation="vertical" 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="35dp"
    android:layout_height="match_parent">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registro Artista"
        android:paddingBottom="35dp"
        android:textSize="30sp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Imagen Artista"
        android:paddingBottom="35dp"
        android:id="@+id/ImageViewArtista"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de Artista"/>

    <EditText
        android:id="@+id/EditTextArtista"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n"/>

    <EditText
        android:id="@+id/EditTextDescripcion"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
  
    <Button
        android:id="@+id/ButtonSubirImagen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subir imagen"/>

    <Button
        android:id="@+id/ButtonRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Artista"/>

</LinearLayout>