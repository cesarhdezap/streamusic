
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_reproductor"
    android:background="@android:color/darker_gray"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtNombreCancion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PlaceholderCancion"/>
            <TextView
                android:id="@+id/txtNombreArtista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PlaceholderArtista"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/ibtnLike"
                android:layout_alignParentRight="true"
                android:contentDescription="Nada"
                android:scaleType="centerInside"
                android:src="@drawable/ic_ss_dislike"
                android:background="@android:color/transparent"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </RelativeLayout>
        <RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtDuracionActual"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
                android:text="0:00"/>
            <TextView
                android:id="@+id/txtDuracionTotal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
                android:text="0:00"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <SeekBar
        android:layout_alignParentBottom="true"
        android:id="@+id/seekBarTiempo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageButton
                android:id="@+id/ibtnBarajar"
                android:contentDescription="Nada"
                android:scaleType="centerInside"
                android:src="@drawable/ic_barajar"
                android:background="@android:color/transparent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageButton
                android:id="@+id/ibtnAnterior"
                android:contentDescription="Nada"
                android:scaleType="centerInside"
                android:src="@drawable/ic_ss_anterior"
                android:background="@android:color/transparent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageButton
                android:id="@+id/ibtnReproducir"
                android:contentDescription="Nada"
                android:scaleType="centerInside"
                android:src="@drawable/ic_ss_play"
                android:background="@android:color/transparent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageButton
                android:id="@+id/ibtnSiguiente"
                android:contentDescription="Nada"
                android:scaleType="centerInside"
                android:src="@drawable/ic_ss_siguiente"
                android:background="@android:color/transparent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageButton
                android:id="@+id/ibtnRepetir"
                android:contentDescription="Nada"
                android:scaleType="centerInside"
                android:src="@drawable/ic_ss_repetir"
                android:background="@android:color/transparent"
                android:layout_width="0dp"
                android:padding="16dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
        </LinearLayout>



    </LinearLayout>

  


    

</RelativeLayout>